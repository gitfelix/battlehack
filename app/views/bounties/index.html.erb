<h2> Most popular bounties </h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Count</th>
      <th> Found? </th>
    </tr>
  </thead>

  <tbody>
    <% @grouped_bounties.first(5).each do |name,count| %>
      <tr>
        <td><%= name %></td>
        <td><%= count %></td>
        <td><%= link_to 'I found this thing!', new_thing_path(thing: {name: name}) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>


<h2> Open Bounties </h2>
<table  class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th> Found? </th>
      <th> Looking since </th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bounties.each do |bounty| %>
      <tr>
        <td><%= bounty.name %></td>
        <td><%= bounty.email %></td>
        <td><%= bounty.found? ? "yes" : "nope" %></td>

        <% if bounty.found? %>
          <td></td>
          <td> <%= link_to 'Show Where I can find this thing', things_path(searchterm: bounty.name) %> </td>
        <% else %>
          <td><%= time_ago_in_words(bounty.created_at) %>
          <td> <%= link_to 'I found this thing!', new_thing_path(thing: {name: bounty.name}) %> </td>
         <% end %>
      </tr>
    <% end %>


  </tbody>
</table>

<br>

<%= link_to 'New Bounty', new_bounty_path %>
