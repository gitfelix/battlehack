<%= form_for(@thing) do |f| %>
  <% if @thing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@thing.errors.count, "error") %> occured when trying to save this hobnob:</h2>

      <ul>
      <% @thing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>

  <div class="field">
    <%= radio_button_tag :location, "here", true%>
    <%= label_tag :location_here, "here" %><br>
    <%= radio_button_tag :location, "elsewhere" %>  
    <%= label_tag :location_elsewhere, "at this address:" %><br>
  </div>

  <div class="field">
  <%= f.text_field :location %>
  </div>

  <%= f.hidden_field :lng %>
  <%= f.hidden_field :lat %>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit "Add a new thing" %>
  </div>
<% end %>
