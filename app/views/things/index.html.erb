
<script>
  start_map();
</script>

<div id="map-canvas" class="map"> </div>

<div class="index">
  <div class="results">
    <form action="<%= things_path %>" method="get">
      <input name="searchterm" placeholder="Search..." class="searchform" type="text" value="<%= @searchterm %>" >

    </form>
  </div>


  <script>
    things = [
        <% @things.each do |thing| %>
            {
              name: "<%= thing.name %>",
              lat: "<%= thing.lat %>",
              lng: "<%= thing.lng %>",
              imgpath: "<%= thing.image %>",
              url: "<%= thing_path(thing) %>"
            },
        <% end %>
    ]
  </script>

  <% if @things.empty? %>
    <%= "None found - yet! Create a bounty for hunters!" %>
    <%= form_for(Bounty.new(name: @searchterm)) do |f| %>
      <%= f.hidden_field :name %>
      <%= f.label :email %><br>
      <%= f.text_field :email %>
      <%= f.submit %>
    <% end %>
  <% else %>

  <div class="table-responsive">
    <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Store</th>
            <th>Price</th>
         </tr>
       </thead>

        <tbody>
          <% @things.each do |thing| %>
            <tr>
              <td><%= link_to thing.name, thing %></td>
              <td><%= thing.description %></td>
              <td><%= 'Price' %></td>
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>
  <% end %>

</div>  <!-- end things -->